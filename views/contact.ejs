        <div class='col-6' id='messageToViewer'>
          <h1>
            Get in touch
          </h1>
          <br>
          <p>
            Wanna get in touch or talk to me about a project? I'm open to opportunities and coffee, so feel free to contact me using
            the form here or send me an email using the button at the bottom of the page.
          </p>
        </div>
        <div class='col-6' id='form'>

          <div class="form-group">
            <label for="">First Name</label>
            <input type="text" class="form-control" id="firstName" placeholder="What's your first name?">
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" placeholder="What's your last name?">
          </div>
          <div class="form-group">
            <label for="emailInput">Email address</label>
            <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="What's your email address?">
          </div>
          <div class="form-group">
            <label for="messageInput"> Message </label>
            <textarea class="form-control" id="messageInput" rows="5" placeholder='What do you want to talk about?' maxlength="1000"></textarea>
          </div>
          <button type='submit' id='submit-button' class="btn btn-primary">
            Send
          </button>

          <!-- The Modal -->
          <div id="thankYouModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
              <span class="close">&times;</span>
              <p id=message>Thanks for reaching out. I'll be in touch shortly!</p>
            </div>

          </div>



        </div>
      </div>

      <div id='contact-form-component'>

      </div>

    </container>
    <script>
      // Get the modal
      var modal = document.getElementById('thankYouModal');

      // Get the button that opens the modal
      var btn = document.getElementById("submit-button");

      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];




      // When the user clicks the button, open the modal, submit data 
      btn.onclick = function () {
        var firstName = document.getElementById('firstName').value;
        $('#message').text('Thanks ' + firstName + " for reaching out. I'll be in touch shortly!")
        modal.style.display = "block";
        var lastName = document.getElementById('lastName').value;
        var emailData = document.getElementById('emailInput').value;
        var messageData = document.getElementById('messageInput').value;
        var formData = {
          'firstName': firstName,
          'lastName': lastName,
          'email': emailData,
          'message': messageData
        };

        $.ajax({
          url: "/contact",
          method: "POST",
          dataType: "text",
          data: formData,
          success: function (data, textStatus, jqXHR) {
            console.log('message submitted')
          },
          error: function (jqXHR, textStatus, errorThrown) {
            console.log(jqXHR);
            console.log('oops, something went wrong with your submission')
          }
        });

      }
      // When the user clicks on <span> (x), close the modal
      span.onclick = function () {
        modal.style.display = "none";
      }
      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
    </script>
